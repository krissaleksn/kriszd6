<Page x:Class="kristinazd5.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kristinazd5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Задание 1" HorizontalAlignment="Center" Grid.ColumnSpan="2"></TextBlock>
        <TextBlock Text="Введите число K" Grid.Row="1" VerticalAlignment="Bottom"></TextBlock>
        <TextBox HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" Name="kra"></TextBox>
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Text="Ответ:" Name="zad" ></TextBlock>
        <Button Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Найти" FontSize="60" Margin="20" Width="200" Click="Button_Click"></Button>
    </Grid>
</Page>
